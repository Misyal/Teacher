<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Teacher.Fragment.SignFragment"
             android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程："
            android:textSize="35sp"
            />

        <Spinner
            android:id="@+id/course"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/tv_course"
            android:textSize="35sp" />

        <Button
            android:id="@+id/creatsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="发起签到" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topR2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topR"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到情况"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/checksign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="查看签到"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/topL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topR2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="学号"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="座位"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="状态"/>
    </LinearLayout>

    <ListView
        android:id="@+id/signsheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topL">

    </ListView>


</RelativeLayout>